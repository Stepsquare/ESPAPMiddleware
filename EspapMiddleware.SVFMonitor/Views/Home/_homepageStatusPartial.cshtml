@model HomepageStatusPartialViewModel

<div class="col-md-3">
    <div class="ig-svf-statedocs">
        <h4>@Model.Total documentos</h4>
    </div>

    @if (Model.IsCurrentSchoolYear)
    {
        <button class="btn ig-btn-blue ig-stats-btn btn-block" onclick="syncAllDocumentsFeap()" @(Model.TotalNotSyncFeap == 0 ? "disabled" : "")>
            <span class="badge"><i class="fas fa-refresh"></i> @Model.TotalNotSyncFeap</span> Sincronizar com FE-AP
        </button>
    }
</div>
<div class="col-md-3">
    <div class="ig-svf-statedocs">
        <h4>@Model.InvoiceStatus.Total faturas</h4>
        <p>@Model.InvoiceStatus.PendingRegularization por regularizar</p>
        <p>@Model.InvoiceStatus.Regularized regularizadas</p>
        <p>@Model.InvoiceStatus.Validated válidas</p>
        <p>@Model.InvoiceStatus.Paid pagas</p>
    </div>

    @if (Model.IsCurrentSchoolYear)
    {
        <button class="btn ig-btn-blue ig-stats-btn btn-block" onclick="syncPaidDocuments()" @(Model.InvoiceStatus.ValidatedToSync == 0 ? "disabled" : "")>
            <span class="badge"><i class="fas fa-refresh"></i> @Model.InvoiceStatus.ValidatedToSync</span> Sincronizar faturas pagas
        </button>
    }
</div>
<div class="col-md-3">
    <div class="ig-svf-statedocs">
        <h4>@Model.CreditNoteStatus.Total notas de crédito</h4>
        @if (Model.IsCurrentSchoolYear)
        {
            <p>@Model.CreditNoteStatus.Unprocessed por processar</p>

        }
        <p>@Model.CreditNoteStatus.Processed processadas</p>
        <p>@Model.CreditNoteStatus.Returned devolvidas</p>
    </div>

    @if (Model.IsCurrentSchoolYear)
    {
        <button class="btn ig-btn-blue ig-stats-btn btn-block" onclick="reprocessCreditNotes()" @(Model.CreditNoteStatus.Unprocessed == 0 ? "disabled" : "")>
            <span class="badge"><i class="fas fa-refresh"></i> @Model.CreditNoteStatus.Unprocessed</span> Reprocessar notas de crédito
        </button>
    }
</div>
<div class="col-md-3">
    <div class="ig-svf-statedocs">
        <h4>@Model.DebitNoteStatus.Total notas de débito</h4>
        <p>@Model.DebitNoteStatus.Unprocessed por processar</p>
        <p>@Model.DebitNoteStatus.Returned devolvidas</p>
    </div>

    @if (Model.IsCurrentSchoolYear)
    {
        <button class="btn ig-btn-blue ig-stats-btn btn-block" onclick="returnDebitNotes()" @(Model.DebitNoteStatus.Unprocessed == 0 ? "disabled" : "")>
            <span class="badge"><i class="fas fa-reply"></i> @Model.DebitNoteStatus.Unprocessed</span> Devolver notas de débito
        </button>
    }
</div>

